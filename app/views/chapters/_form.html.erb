<%= form_for @chapter, remote: true, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <div class="col-2">
      <label class="form-label">标题</label>
    </div>
    <div class="col-10">
      <%= f.text_field :title, placeholder: '标题', class: 'form-input' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-2">
      <label class="form-label">父节点</label>
    </div>
    <div class="col-10">
      <%= f.select :parent_id,
                   Chapter.all.collect { |c| [ c.title, c.id ] },
                   { include_blank: true },
                   { class: 'form-select chapter-form-select' }
      %>
    </div>
  </div>

  <div class="form-group text-right chapter-form-btns">
    <a class="btn" href="javascript:window.history.back()">取消</a>
    <button class="btn btn-primary ml-1">保存</button>
  </div>
<% end %>
