<div class="chapters-sort-list">
  <header class="navbar header">
    <section class="navbar-section">
      <a href="/chapters" class='btn btn-primary'>回到所有章节</a>
    </section>
    <section class="navbar-center">
      <h3>章节内容克隆</h3>
    </section>
    <section class="navbar-section text-right">
      <%= render partial: 'common/dropdown', locals: { user: current_user } %>
    </section>
  </header>

  <div class="container">
    <div class="columns col-gapless">
      <div class="column col-2"></div>
      <div class="column col-8">
        <div class="panel">
          <div class="panel-header"></div>
          <div class="panel-body">
            <%= form_for @clone, url: chapter_clone_path(@chapter), remote: true, html: { class: 'form-horizontal' } do |f| %>
              <div class="form-group">
                <div class="col-2">
                  <label class="form-label">从哪里复制？</label>
                </div>
                <div class="col-10">
                  <%= f.select :source,
                               @chapters.collect { |c| [ c.title, c.id ] },
                               { include_blank: true },
                               { class: 'form-select chapter-form-select' }
                  %>
                </div>
              </div>

              <div class="form-group text-right chapter-form-btns">
                <a class="btn" href="javascript:window.history.back()">取消</a>
                <button class="btn btn-primary ml-1">保存</button>
              </div>
            <% end %>
          </div>
          <div class="panel-footer"></div>
        </div>
      </div>
      <div class="column col-2"></div>
    </div>
  </div>
</div>
