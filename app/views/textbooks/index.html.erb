<div class="textbooks-list">
  <%= render partial: 'common/header', locals: { title: '所有教材', user: current_user } %>

  <div class="container">
    <div class="columns col-gapless">
      <div class="column col-2"></div>
      <div class="column col-8">
        <div class="panel">
          <div class="panel-header"></div>
          <div class="panel-body">
            <table class="table table-striped table-hover">
              <% @books.each_with_index do |book, index| %>
              <tr>
                <td>
                  <%= link_to book.title, textbook_path(book) %>
                  <div class='workbook-actions'>
                    <% if current_user.added_textbook?(textbook_id: book.id) %>
                      <i class="icon icon-check"></i>
                    <% else %>
                      <%= link_to add_to_my_workbook_path(textbook_id: book.id), remote: true, method: :post do %>
                        <i class="icon icon-plus"></i>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
              <% end %>
            </table>
          </div>
          <div class="panel-footer">
          </div>
        </div>
      </div>
      <div class="column col-2"></div>
    </div>
  </div>
</div>
