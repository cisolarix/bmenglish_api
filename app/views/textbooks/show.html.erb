<div class="ui borderless main menu">
  <div class="ui text container">
    <a href="<%= sign_out_path %>" class="ui right floated dropdown item">
      <%= current_user.name %><i class="dropdown icon"></i>
      <div class="menu">
        <div class="item">登出</div>
      </div>
    </a>
  </div>
</div>

<div class="ui text container">
  <%= render 'item', collection: @textbook %>
  <% if @workbook %>
    <a class="ui disabled button">已加入我的练习册</a>
    <a class="ui primary button" href="<%= workbook_path(@workbook) %>">前往练习</a>
  <% else %>
    <%= link_to '加入我的练习册', add_to_my_workbook_path(textbook_id: params[:id]), remote: true, method: :post, class: 'ui primary button' %>
  <% end %>
</div>
