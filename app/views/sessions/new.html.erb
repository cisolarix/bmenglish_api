<style>
  body {
    background-color: #DADADA;
  }
  body > .grid {
    height: 100%;
  }
  .image {
    margin-top: -100px;
  }
  .column {
    max-width: 450px;
  }
</style>

<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <div class="content">登录页面</div>
    </h2>

    <%= form_for @sign_in, url: sign_in_path, method: :post, html: { class: 'ui large form' } do |f| %>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <input type="text" name="users_sign_in[cell]" placeholder="手机号码">
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <input type="password" name="users_sign_in[password]" placeholder="密码">
          </div>
        </div>
        <button type="submit" class="ui fluid large teal submit button">登录</button>
      </div>

      <% if flash['info'] %>
      <div class="ui error message" style="display: block;"><%= flash['info'] %></div>
      <% end %>
    <% end %>
  </div>
</div>

<script>
  $(() => {
    $('.ui.form').form()
  })
</script>
