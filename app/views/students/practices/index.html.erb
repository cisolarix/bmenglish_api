<div class="student-practices-list">
  <header class="navbar header">
    <section class="navbar-section">
    </section>
    <section class="navbar-center">
      <h3><%= @student.name %>练习记录</h3>
    </section>
    <section class="navbar-section text-right">
      <%= render partial: 'common/dropdown', locals: { user: current_user } %>
    </section>
  </header>

  <div class="container">
    <div class="columns">
      <div class="column col-12">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>练习册</th>
              <th>章节</th>
              <th>分数</th>
              <th>日期</th>
            </tr>
          </thead>
          <tbody>
            <% @practices.each_with_index do |practice, index| %>
              <tr>
                <td>
                  <%= practice.workbook&.title %>
                </td>
                <td>
                  <%= link_to practice.lesson.title, practices_answer_path(id: practice.id) %>
                </td>
                <td>
                  <%= practice.score %>
                </td>
                <td>
                  <%= practice.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class='columns'>
      <div class="column col-9"><%= paginate @practices %></div>
      <div class="column col-3 practice-list-page-info"><%= page_entries_info @practices %></div>
    </div>
  </div>
</div>
