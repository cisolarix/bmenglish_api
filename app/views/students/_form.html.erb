<%= form_for @student, remote: true, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <div class="col-2">
      <label class="form-label">姓名</label>
    </div>
    <div class="col-10">
      <%= f.text_field :name, placeholder: '姓名', class: 'form-input' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-2">
      <label class="form-label">手机号码</label>
    </div>
    <div class="col-10">
      <%= f.text_field :cell, placeholder: '手机号码', class: 'form-input' %>
    </div>
  </div>

  <div class="form-group text-right chapter-form-btns">
    <a class="btn" href="javascript:window.history.back()">取消</a>
    <button class="btn btn-primary ml-1">保存</button>
  </div>
<% end %>
