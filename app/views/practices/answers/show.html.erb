<div id="answers">
  <div class="header">
    <header class="navbar">
      <section class="navbar-section">
        <a href="/workbooks/<%= params[:workbook_id] %>" class="navbar-brand mr-2" id='back-to-workbook'>回到练习册</a>
      </section>
      <section class="navbar-center">
        <span><%= @workbook.textbook.title %></span>
      </section>
      <section class="navbar-section text-right">
        <div class="dropdown dropdown-right">
          <a class="btn btn-link dropdown-toggle" tabindex="0">
            <%= current_user.name %> <i class="icon icon-caret"></i>
          </a>
          <ul class="menu">
            <li class="menu-item">
              <a href="/sign_out">注销</a>
            </li>
          </ul>
        </div>
      </section>
    </header>
  </div>

  <div class="container questions-list">
    <div class="columns">
      <div class="column col-12">
        <div class="panel">
          <div class="panel-header">
            <div class="panel-title">
              <%= "#{@lesson.parent.title} - #{@lesson.title}" %>
            </div>
          </div>
          <div class="panel-nav">
          </div>
          <div class="panel-body">
            <%= render partial: 'item', locals: { collection: @questions } %>
          </div>
          <div class="panel-footer">
            练习日期：<%= @result.created_at.localtime.strftime("%Y-%m-%d %H:%M:%S") %>，正确率：<%= @result.score %>%
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
